{
  "schemaVersion": 1,
  "id": "fancybookshelf",
  "version": "${version}",

  "name": "Fancy Bookshelf",
  "description": "Adds a fancier bookshelf, a la the Bibliocraft book case of old.",
  "authors": [
    "foul-fortune-feline"
  ],
  "contact": {
    "sources": "https://github.com/foul-fortune-feline/fancy-bookshelf"
  },

  "license": "CC-BY-NC-SA-4.0",
  "icon": "assets/fancybookshelf/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.foulfortunefeline.fancybookshelf.FancyBookshelf"
    ],
    "client": [
      "com.foulfortunefeline.fancybookshelf.client.ModClientInitializer"
    ]
  },
  "mixins": [
    "fancybookshelf.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "another-mod": "*"
  }
}
